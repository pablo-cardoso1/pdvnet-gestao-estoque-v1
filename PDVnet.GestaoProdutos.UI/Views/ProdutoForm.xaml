<Window x:Class="PDVnet.GestaoProdutos.UI.Views.ProdutoForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PDVnet.GestaoProdutos.UI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Titulo}" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=local:ProdutoViewModel, IsDesignTimeCreatable=True}">

    <Window.Resources>
        <converters:DecimalConverter x:Key="DecimalConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="{Binding Titulo}" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Formulário -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Nome:" FontWeight="Bold"/>
            <TextBox Text="{Binding Produto.Nome, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True}" 
                     Margin="0,0,0,10" Height="25"/>

            <Label Content="Descrição:" FontWeight="Bold"/>
            <TextBox Text="{Binding Produto.Descricao, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                     Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Content="Preço:" FontWeight="Bold"/>
                    <TextBox Text="{Binding Produto.Preco, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource DecimalConverter}, ValidatesOnExceptions=True, NotifyOnValidationError=True}" 
                             Height="25"
                             PreviewTextInput="NumericOnly_PreviewTextInput"
                             DataObject.Pasting="NumericOnly_Pasting"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Quantidade:" FontWeight="Bold"/>
                    <TextBox Text="{Binding Produto.Quantidade, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnExceptions=True, NotifyOnValidationError=True}" 
                             Height="25"
                             PreviewTextInput="IntegerOnly_PreviewTextInput"
                             DataObject.Pasting="IntegerOnly_Pasting"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Botões -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" 
                    Command="{Binding CancelarCommand}"
                    Width="80" Height="30" 
                    Margin="0,0,10,0"/>

            <Button Content="Salvar" 
                    Command="{Binding SalvarCommand}"
                    Width="80" Height="30" 
                    Background="#FF0078D7" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>